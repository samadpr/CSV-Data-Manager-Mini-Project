@model CsvDataManager.Dtos.TypeOfFileDto;
@{
    ViewData["Title"] = "CsvImport";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>CsvImport</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Pages" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active">CsvImport</li>
            </ol>
        </nav>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div style="padding: 15px; border-radius: 5px; text-align: center; font-weight: bold;
         @if (ViewData["MessageClass"] != null && ViewData["MessageClass"].ToString() == "success")
         {
                <text>background-color: #d4f8e5; color: #155724;</text> <!-- Very light green -->
            }
            else
            {
                <text>background-color: #f8d7da; color: #721c24;</text> <!-- Very light red -->
            }">
            @ViewData["Message"]
            </div>
    }

    <div class="container pt-4">
        <section>
            <form method="post" enctype="multipart/form-data">
                <div class="row justify-content-center">
                    <div class="col-md-8 mb-3 mt-4">
                        <div class="form-group">
                            <label for="csvFile">Choose CSV File</label>
                            <div class="input-group">
                                <input asp-for="CsvFile" type="file" class="form-control" id="csvFile" name="csvFile" accept=".csv" />
                                <span asp-validation-for="CsvFile" class="text-danger small"></span>
                                <button class="btn btn-primary" id="processFileBtn">Process File</button>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-8 mt-5">
                        <div class="form-group">
                            <label for="networkPath">Enter Network Path</label>
                            <div class="input-group">
                                <input asp-for="NetworkPath" type="text" class="form-control" id="networkPath" name="networkPath" placeholder="Enter network path or URL" />
                                <span asp-validation-for="NetworkPath" class="text-danger small"></span>
                                <button class="btn btn-primary" id="processNetworkPathBtn">Process Network Path</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</main>
